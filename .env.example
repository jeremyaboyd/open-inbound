# Domain Configuration (must be a real domain for Traefik/Let's Encrypt)
DOMAIN=localhost

# Let's Encrypt (required for Traefik TLS)
ACME_EMAIL=

# Retention Policy
RETENTION_DAYS=30

# Attachments
ATTACHMENTS_ENABLED=true

# Ports
SMTP_PORT=25
WEB_PORT=3000

# Database
DATABASE_URL=postgres://smtp:smtp@db:5432/smtp

# Admin (optional - leave empty to disable admin panel)
ADMIN_USERNAME=
ADMIN_PASSWORD=

# Session Secret (change in production)
SESSION_SECRET=change-me-in-production
